<%= form_with(model: @new_film) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :seen %>
    <%= f.date_field :seen %>

    <%= f.submit("Add film") %>
<% end %>

<% if @films.blank? %>
    <p>No films to show</p>
<% else %>
    <ul>
        <% @films.each do |film| %>
            <li>
                <h2><%= film.official_title %></h2>
                <p><%= film.official_overview.truncate(240) %></p>
            </li>
        <% end %>
    </ul>
<% end %>